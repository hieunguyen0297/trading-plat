@{
}
@if (ViewBag.error != null)
{
    <div class="container">
        <h2>Ops, Something went wrong!</h2>
        <p><span class="badge badge-danger">Sorry, @ViewBag.error</span></p>
        <p>Please try again!</p>
        <p><a href="/stock/watchlist">Retry</a></p>
    </div>

}
else if (ViewBag.order == "Buy")
{
    <div class="container m-3 p-3">
        <h1>Confirmation</h1>
        <h6>Congratulation! Your buy order has been processed successfully.</h6>
        <h3 class="mt-3 p-3">Order Details</h3>
        <h5 class="mt-2 p-3">Status: Filled</h5>
        <h5 class="mt-3 p-3">Buy Order For: <span>@ViewBag.symbol</span></h5>
        <h5 class="mt-3 p-3">Price: $@Math.Round(ViewBag.price, 2)</h5>
        <h5 class="mt-3 p-3">Quantity: @ViewBag.quantity</h5>
        <h4 class="mt-3 p-3">Your total cost: $@Math.Round(ViewBag.totalCost, 2) </h4>
    </div>


}
else if (ViewBag.order == "Sell")
{
    <div class="container m-3 p-3">
        <h1>Confirmation</h1>
        <h6>Congratulation! Your sell order has been processed successfully.</h6>
        <h3 class="mt-3 p-3">Order Details</h3>
        <h5 class="mt-2 p-3">Status: Filled</h5>
        <h5 class="mt-3 p-3">Sell Order For: <span>@ViewBag.symbol</span></h5>
        <h5 class="mt-3 p-3">Price: $@Math.Round(ViewBag.price, 2)</h5>
        <h5 class="mt-3 p-3">Quantity: @ViewBag.quantity</h5>
        <h4 class="mt-3 p-3">Your total cost: $@Math.Round(ViewBag.totalCreditReceive, 2) </h4>
    </div>
}


